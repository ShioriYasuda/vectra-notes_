FROM python:3.12-slim
WORKDIR /app
COPY pyproject.toml /app/
RUN pip install --upgrade pip && pip install uvicorn[standard] fastapi sqlalchemy psycopg[binary] pydantic pydantic-settings sentence-transformers
COPY src /app/src
ENV PYTHONPATH=/app/src
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
